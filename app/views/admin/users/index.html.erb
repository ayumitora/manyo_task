<h1>ユーザー一覧</h1>
<p><%= notice %></p>

<div class="table">
  <table>
    <tr>
      <th><%= t('user_name') %></th>
      <th><%= t('email') %></th>
      <th><%= t('admin') %></th>
      <th><%= t('created_at') %></th>
      <th><%= t('updated_at') %></th>
      <th><%= t('task_count') %></th>

    </tr>

    <% @users.each do |user| %>
      <tr>
        <td><%= user.user_name %></td>
        <td><%= user.email %></td>
        <td><%= user.admin? ? "あり":"なし" %></td>
        <td><%= user.created_at %></td>
        <td><%= user.updated_at %></td>
        <td><%= user.tasks.count %></td>
        <td><%= link_to t('to_note'), admin_user_path(user) %></td>
        <td><%= link_to t('edit'), edit_admin_user_path(user) %></td>
        <td><%= link_to t('destroy'), [:admin, user],method: :delete,data:{confirm:I18n.t('confirm')} %></td>
      </tr>
    <% end %>
  </table>
</div>
