<!DOCTYPE html>
<html>
  <head>
    <title>ManyoTask</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header id="header">
    <div class="logo">
      <h2>ManyoTask</h2>
    </div>
    <% if current_user %>
      <ul>
        <li><%= link_to t('index'), tasks_path %></li>
        <% if current_user.admin? %>
          <li><%= link_to t('activerecord.models.user'), admin_users_path %></li>
        <% end %>
        <li><%= link_to t('logout'), logout_path, method: :delete %></li>
      </ul>
    <% else %>
      <ul>
        <li><%= link_to t('sigin_up'), new_admin_user_path %></li>
        <li><%= link_to t('login'), login_path %></li>
      </ul>
    <% end %>

  </header>

  <%= yield %>
  <footer>
    <p>あらいあゆみ</p>
    <p>2019.6</p>
  </footer>
  </body>
</html>
